



User = {{
    
    login(name : string, password : string) : outcome(string,string) = 
    (
        Option.switch(
            u ->
                if u.password == password then
                    {success = "Login ok"}
                else
                    {failure = "Mauvais mot de passe"}
            ,
            {failure = "L'utilisateur n'existe pas"},
            get(name)
        )
    )





}}
